{
    "version": 4,
    "cmakeMinimumRequired": {"major": 4, "minor": 0},
    "configurePresets": [
        {
            "name": "linux-clang",
            "description": "build for linux with clang",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/linux",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_BUILD_TYPE":"Release"
            }
        },
        {
            "name": "windows11-mingw",
            "description": "build for windows11 with mingw-w64",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/win",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/toolchain-mingw64.cmake",
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {"name": "build-linux", "configurePreset": "linux-clang"},
        {"name": "build-windows11", "configurePreset": "windows11-mingw"}
    ]
}